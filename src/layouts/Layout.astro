---
interface Props {
  title?: string;
}

const { title = "" } = Astro.props;
import MainNavBar from "../components/MainNavBar.astro";
import MainFooter from "../components/MainFooter.astro";
import "../styles/overwrite-bootstrap-colors.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href={import.meta.env.BASE_URL + "/favicon.svg"}
    />
    <!-- preconnect links for performance https://developer.chrome.com/docs/lighthouse/performance/uses-rel-preconnect/ -->
    <link rel="preconnect" href="https://ka-f.fontawesome.com" />
    <link rel="preconnect" href="https://image.tmdb.org" />
    <link rel="preconnect" href="https://api.themoviedb.org" />

    <meta name="generator" content={Astro.generator} />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
      defer></script>
    <script
      src="https://kit.fontawesome.com/3ddf2f6fad.js"
      crossorigin="anonymous"
      defer></script>
    <!-- Include the title passed to the Layout component if available -->
    <title>Movies Movies Movies{title ? ` : ${title}` : ""}</title>
  </head>
  <body>
    <header class="mb-3">
      <MainNavBar />
    </header>
    <main class="container">
      <slot />
      <div
        class="toast-container position-fixed top-0 start-50 translate-middle-x p-3"
        id="toastContainer"
      >
      </div>
    </main>
    <footer class="mb-3"><MainFooter /></footer>
  </body>
</html>
<style is:global>
  ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
  }
</style>
