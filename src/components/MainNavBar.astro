---
import MainNavBarSearch from "./MainNavBarSearch.svelte";
import BrandImage from "../images/MoviesMoviesMovies_logo.svg";
import Image from "astro/components/Image.astro";
const URL = Astro.url.pathname.split("/")[2];
---

<nav class="navbar navbar-expand-lg">
  <div class="container-fluid">
    <a class="navbar-brand" href={import.meta.env.BASE_URL}>
      <Image
        src={BrandImage}
        alt="Movies Movies Movies"
        width="80"
        height="50"
      />
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="fa-solid fa-bars"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a
            class="nav-link"
            class:list={{ active: URL === "wishlist" }}
            href=`${import.meta.env.BASE_URL}/wishlist`
          >
            Wish List
          </a>
        </li>
        <li class="nav-item">
          <a
            class="nav-link"
            class:list={{ active: URL === "settings" }}
            href=`${import.meta.env.BASE_URL}/settings`
          >
            Settings
          </a>
        </li>
      </ul>
      <MainNavBarSearch client:only="svelte" URL={URL} />
    </div>
  </div>
</nav>
