---
import MainNavBarSearch from "./MainNavBarSearch.svelte";
import BrandImage from "../images/MoviesMoviesMovies_logo_path.svg";
import Image from "astro/components/Image.astro";
import MainNavBarLink from "./MainNavBarLink.astro";
const URL = Astro.url.pathname;
const BASE_URL = import.meta.env.BASE_URL;
---

<nav class="navbar navbar-expand-lg" aria-label="primary">
  <div class="container">
    <a class="navbar-brand" href={BASE_URL}>
      <Image
        src={BrandImage}
        alt="Movies Movies Movies"
        width="80"
        height="50"
        loading="eager"
      />
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="fa-solid fa-bars"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <MainNavBarLink activeUrl="genre">Genre</MainNavBarLink>
        </li>
        <li class="nav-item">
          <MainNavBarLink activeUrl="upcoming"> Upcoming</MainNavBarLink>
        </li>
        <li class="nav-item">
          <MainNavBarLink activeUrl="myratings"> My Ratings</MainNavBarLink>
        </li>
        <li class="nav-item">
          <MainNavBarLink activeUrl="settings"> Settings</MainNavBarLink>
        </li>
        <li class="nav-item">
          <MainNavBarLink activeUrl="credits"> Credits</MainNavBarLink>
        </li>
      </ul>
      <MainNavBarSearch client:only="svelte" />
    </div>
  </div>
</nav>
